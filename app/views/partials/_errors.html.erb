      <% if instance.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(instance.errors.count, "Error") %>!</h2>
        <ul>
          <% instance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>