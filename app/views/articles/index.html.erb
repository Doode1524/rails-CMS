<%= tag.div class: "container" do %><%=render partial: 'filter', locals: {articles: @articles} %> 
<% end %>
<br>
<div class="row">
<%@articles.each do |article|%>
<div class="col-md-10 card">

<% article.comments.each do |r| r.replies%>
<% end %>

<ul>
    <h4><%= article.title %></h4>
    Source: <%=article.source%><br>
    Decription:<%= article.description.first(200)%><br>
    <%=link_to "Click Here To Learn More:", article.url%>...<br>
    Published At: <%= article.published_at %><br>
    <%=link_to "Comments: (#{article.comments.length})", article_comments_path(article), class: "btn btn-primary" %>
    <br>
</ul>
</div>
<%end%>
</div>
<%= paginate @articles %>
